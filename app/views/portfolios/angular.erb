<h1>Anggular Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @angular_portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to "Delete Portfolio item", portfolio_path(item), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"} %>
<% end %>